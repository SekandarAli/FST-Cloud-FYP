<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:gravity="center"
    tools:context=".FSTSignUp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.3"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/signinlogo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="0.55"

            >
            <Switch
                android:id="@+id/switch2"
                style="@style/switch_signup"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Vendor"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_weight="0.5"
        >


        <TextView
            android:id="@+id/tv1"
            style="@style/heading"
            android:layout_gravity="center"
            android:text="Create Account for Vendor" />

        <EditText

            android:id="@+id/vendorUsername"
            style="@style/editTextsignup"
            android:layout_marginTop="10dp"
            android:background="@drawable/logo"
            android:drawablePadding="10dp"
            android:hint="Enter Username"
            android:singleLine="true"
            android:drawableRight="@drawable/ic_user" />

        <EditText

            android:id="@+id/vendorRestaurant"
            style="@style/editTextsignup"
            android:layout_marginTop="10dp"
            android:background="@drawable/logo"
            android:drawablePadding="10dp"
            android:hint="Enter Restaurant Name"
            android:singleLine="true"
            android:drawableRight="@drawable/ic_user" />

        <EditText

            style="@style/editTextsignup"
            android:hint="Enter Email"
            android:background="@drawable/logo"
            android:drawableRight="@drawable/ic_email"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:id="@+id/vendor_Email"
            ></EditText>


        <EditText

            style="@style/editTextsignup"
            android:layout_marginTop="10dp"
            android:hint="Enter Phoneno"
            android:background="@drawable/logo"
            android:inputType="number"
            android:drawableRight="@drawable/ic_phone"
            android:id="@+id/vendor_Phoneno"
            android:singleLine="true"
            ></EditText>

        <EditText

            style="@style/editTextsignup"
            android:layout_marginTop="10dp"
            android:hint="Enter Password"
            android:background="@drawable/logo"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_password"
            android:id="@+id/vendor_Password"
            android:singleLine="true"
            ></EditText>


        <EditText

            style="@style/editTextsignup"
            android:layout_marginTop="10dp"
            android:hint="Enter Password Again"
            android:background="@drawable/logo"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_password"
            android:id="@+id/vendor_Repassword"
            android:singleLine="true"
            ></EditText>


        <Button
            style="@style/vendor_Location"
            android:text="Select location"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:id="@+id/vendor_Location"
            ></Button>

        <Button
            style="@style/buttonsign"
            android:text="SignUp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:id="@+id/vendor_Signup"
            ></Button>



    </LinearLayout>



